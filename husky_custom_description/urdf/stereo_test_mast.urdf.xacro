<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="stereo_test_mast">

  <material name="Black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="Blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="Green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="Grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="Orange">
    <color rgba="${255/255} ${108/255} ${10/255} 1.0"/>
  </material>
  <material name="Brown">
    <color rgba="${222/255} ${207/255} ${195/255} 1.0"/>
  </material>
  <material name="Red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="White">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <xacro:property name="mast_ht" value="1.6" /> 
  <xacro:property name="mast_h2" value="0.8" /> 
  
  <xacro:property name="Camera01Name"       value="NavCamStereo" /> 
  <xacro:property name="Camera01UpdateRate" value="30" />
  <xacro:property name="camera_baseline"      value="0.50" />
  
  <xacro:macro name="stereo_test_mast">
  

  <link name="mast_link">
    <collision>
      <origin rpy="0 0 0" xyz="0 0 ${mast_h2}"/>
      <geometry>
        <box size="0.05 0.05 ${mast_ht}"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 ${mast_h2}"/>
      <geometry>
        <box size="0.05 0.05 ${mast_ht}"/>
      </geometry>
      <material name="White"/>
    </visual>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 ${mast_h2}"/>
      <mass value="0.2"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>
  <gazebo reference="mast_link">
    <material>Gazebo/White</material>
  </gazebo>
  <joint name="mast_joint" type="fixed">
    <parent link="base_link"/>
    <child link="mast_link"/>
    <origin xyz="0.2 0 0" rpy="0 0 0" />
    <axis xyz="0 0 1"/>
  </joint>
  
  <link name="pan_link">
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <geometry>
        <box size="0.1 0.1 0.2"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <geometry>
        <box size="0.1 0.1 0.2"/>
      </geometry>
      <material name="Blue"/>
    </visual>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <mass value="0.1"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>
  <gazebo reference="pan_link">
    <material>Gazebo/Blue</material>
  </gazebo>
  <joint name="pan_joint" type="revolute">
    <parent link="mast_link"/>
    <child link="pan_link"/>
    <origin xyz="0 0 ${mast_ht}" rpy="0 0 0" />
    <axis xyz="0 0 1"/>
    <limit lower="${-2.1 * pi}" upper="${2.1 * pi}" effort="150.0" velocity="3.15"/>
  </joint>
  <transmission name="pan_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="pan_joint">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="pan_motor">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  
  <link name="tilt_link">
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <geometry>
        <box size="0.1 0.1 0.2"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <geometry>
        <box size="0.1 0.1 0.2"/>
      </geometry>
      <material name="Green"/>
    </visual>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <mass value="0.1"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>
  <gazebo reference="tilt_link">
    <material>Gazebo/Green</material>
  </gazebo>
  <joint name="tilt_joint" type="revolute">
    <parent link="pan_link"/>
    <child link="tilt_link"/>
    <origin xyz="0 0 0.2" rpy="0 0.2 0" />
    <axis xyz="0 1 0"/>
    <limit lower="${-2.1 * pi}" upper="${2.1 * pi}" effort="150.0" velocity="3.15"/>
  </joint>
  <transmission name="tilt_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="tilt_joint">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="tilt_motor">
      <hardwareInterface>EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <link name="${Camera01Name}_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0"  rpy="0 0 0"/>
      <geometry>
        <box size="0.025 ${camera_baseline} 0.025"/>
      </geometry>
      <material name="Red"/>
    </visual>
    <visual>
      <origin xyz="0 ${camera_baseline/2} 0"  rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="Red"/>
    </visual>
    <visual>
      <origin xyz="0 -${camera_baseline/2} 0"  rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="Red"/>
    </visual>
    <inertial>
      <mass value="0.05" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
  </link>
  
  <gazebo reference="${Camera01Name}_link">
    <material>Gazebo/Red</material>
    <sensor type="multicamera" name="${Camera01Name}">
      <update_rate>${Camera01UpdateRate}</update_rate>
      
      <camera name="left">
        <pose>0 ${camera_baseline/2} 0 0 0 0</pose>
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>

      <camera name="right">
        <pose>0 -${camera_baseline/2} 0 0 0 0</pose>
        <horizontal_fov>1.3962634</horizontal_fov>
        <image>
          <width>800</width>
          <height>800</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>300</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>


      <plugin name="stereo_camera_controller" filename="libgazebo_ros_multicamera.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>0.0</updateRate>
        <leftCamera>cameras/${Camera01Name}</leftCamera>
        <imageTopicName>${Camera01Name}/image_raw</imageTopicName>
        <cameraInfoTopicName>${Camera01Name}/camera_info</cameraInfoTopicName>
        <frameName>${Camera01Name}_link</frameName>
        <hackBaseline>0.07</hackBaseline>
        <distortionK1>0.0</distortionK1>
        <distortionK2>0.0</distortionK2>
        <distortionK3>0.0</distortionK3>
        <distortionT1>0.0</distortionT1>
        <distortionT2>0.0</distortionT2>
      </plugin>
      
    </sensor>
  </gazebo>  
  <joint name="camera_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="0.1 0 0.2" rpy="0 0 0"/>
    <parent link="tilt_link"/>
    <child link="${Camera01Name}_link"/>
  </joint>

  
  </xacro:macro>
</robot>
